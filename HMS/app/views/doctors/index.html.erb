<link rel="stylesheet" type="text/css" href="/stylesheets/doctors/index.css">
<div class="container">
    <div class="notice">
        <div><%= flash[:notice] %></div>
    </div>
    <div class="content">
        <div class="heading"> 
            <p class=""> My Profile:</p>
        </div>
        <div class="tile">
            <div class="profile-pic">
                <p class="pt-img"><%= image_tag @doctor.avatar.url(:thumb) %></p>
            </div>
            <div class="details">
                <p>Name: Dr.<%=@doctor.name.capitalize%></p>
                <p>Age: <%=@doctor.age%></p>   
                <p>Department: <%=@doctor.department.name%></p>   
            </div>
            <div class="links">
                <p> Options:</p>
                <p>
                    <% permitted_to? :view_appointments, :doctors do %>
                      <%= link_to 'Appointments',view_appointments_doctor_path(session[:user_id]),:class=>"button no-underline" %>
                    <% end %>
                    <% permitted_to? :update, :doctors do %>
                      <%= link_to 'Edit Details',edit_doctor_path(session[:user_id]),:class=>"button no-underline" %>
                    <% end %>
                </p>
            </div>

        </div>
    </div>
</div>
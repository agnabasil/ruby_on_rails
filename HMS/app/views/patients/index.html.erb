<link rel="stylesheet" type="text/css" href="/stylesheets/patients/index.css">
<div class="container">
    <div class="notice">
        <div><%= flash[:notice] %></div>
    </div>
    <div class="content">
        <div class="heading"> 
            <p class=""> My Profile:</p>
        </div>
        <div class="tile">
            <div class="profile-pic">
                <p class="pt-img"><%= image_tag @patient.avatar.url(:thumb) %></p>
            </div>
            <div class="details">
                <p>Name: <%=@patient.name.camelcase%></p>
                <p>Age: <%=@patient.age%></p>   
            </div>
            <div class="links">
                <p> Options:</p>
                <p>
                    <%= link_to ' View Appointments',view_appointments_patient_path(session[:user_id]),:class=>"button no-underline" %>
                </p>
                <p>
                    <%= link_to 'New Appointments',new_appointment_patient_path(session[:user_id]),:class=>"button no-underline" %>

                </p>
                <p>

                    <%= link_to 'Edit Details', edit_patient_path(session[:user_id]),:class=>"button no-underline" %>

                </p>
            </div>

        </div>
    </div>
</div>
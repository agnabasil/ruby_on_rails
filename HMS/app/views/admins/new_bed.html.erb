<link rel="stylesheet" type="text/css" href="/stylesheets/admins/new_bed.css">
<div class="container">
    <div class="outer-card">
        <p class="heading">Bed Creation</p>
        <div class="login-card">
            <img src="/images/roomandbed.png" alt="logo" class="user">
            <% form_for @bed, :url=>create_new_bed_admins_path  do |f|%>
              <div class="space"><%= f.error_messages %></div>

              <div class="space">  
                  <%= f.text_field :bed_no,:required => true,:placeholder => "Bed number", :class =>"width"%>
              </div>

              <div class="space">  
                  <%= f.hidden_field :room_id, :value => @room.id, :required => true %>
              </div>

              <div class="space">   <%= f.submit "Create", :class=>"button no-underline"%>
                  <% permitted_to? :view_bed, :admins do %>
                    <%= link_to 'Back', view_bed_admins_path, :class=>"button-back no-underline" %>
                  <% end %>
              </div>

            <% end %>
        </div>
    </div>
</div>
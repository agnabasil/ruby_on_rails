<% form_remote_for([@blog, @comment]) do |f| %>
  <%= f.error_messages %>

  <p>
      <%= f.hidden_field :commenter, :value => @commenters.username %>
      <%= f.hidden_field :blog_id, :value => @blog.id %>
  </p>
  <p>
  <div style="float: left; font-size: 16px;padding: 1%;">
      <%= f.label :comment %>
  </div>
  <%= f.text_area :body ,:cols=> 20, :rows => 1, :required => true,  :placeholder => "  your comment here!"%>
  <div style="float: right;">
      <%= f.submit "Submit" %>
  </div>
  </p>
<% end %>

<div>
<% form_for (@blog) , :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>
  <p>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
  </p>
  <p>
      <%= f.label :content %><br />
      <%= f.text_area :content, :cols=> 30, :rows => 3 %>
  </p>
  <p>
      <%= f.hidden_field :author, :value => @author.username %>
  </p>
  <p>
      <%= f.file_field :photo %>
  </p>
  <%#*<p>%>
      <%#= date_select :person, :birth_date %>
  <%#*</p>%>
  <p>
      <%= f.submit 'Submit'%>
  </p>
<% end %>
</div>
<link rel="stylesheet" type="text/css" href="/stylesheets/users/new.css">
<div class="outer-card">
    <div><%= flash[:notice] %></div>
    <h1>Sign Up</h1>
    <div class="login-card">
        <img src="/images/user.png" alt="user login" class="user"> 
        <% form_for(:user, :url=>{:controller=>"users", :action=>"create"})  do |f| %>
          <p> Username:<br/> <%= f.text_field :username,:required => true%> </p>
          <p> Email:<br/> <%= f.text_field :email,:required => true%> </p>
          <p> Address:<br/> <%= f.text_field :address ,:required => true%></p>
          <p> Password:<br/> <%= f.password_field :password,:required => true%></p>
          <p> Password Confirmation:<br/> <%= f.password_field :password_confirmation,:required => true%> </p>
          <%= f.submit :Signup %>
        <% end %>
    </div>
    <%= link_to "login", log_in_users_path, :class=>"w3-btn w3-white w3-border w3-border-grey w3-round-large pos" %>

    <% if @user.errors.any? %>


      <% for message_error in @user.errors.full_messages %>
        <p>* <%= message_error %></p>
      <% end %>

    <% end %>

</div>